@model List<TeamCode.Models.Entities.File>

@{
    ViewBag.Title = "Index";
}
<div>
    <a href='@Url.Action("Index","UserToProjects", new { id = ViewContext.RouteData.Values["ID"]})'>
        <img src="~/img/iconCog.png" style="width: 66px; height: 66px; float: right; position: relative; top: 0px;" />
    </a>
    <h2>@ViewBag.ProjectName</h2>
    <p>Owner: @ViewBag.ProjectOwner</p>
    

    <div class="col-sm-6 col-md-3">
        <div class="thumbnail" style="width: 250px; height: 170px; margin-top: 20px;">
            <a href='@Url.Action("CreateFile","MyFiles", new { id = ViewContext.RouteData.Values["ID"]})'>
                <img src="~/img/addFile.jpg" style="width: 66px; height: 66px;" />
            </a>
            <div class="caption">
                <h3>New File</h3>
                <div>

                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    string shorTitle = (item.fileName.Length + 3) > 17 ? item.fileName.Substring(0, 17) + ".." : item.fileName + ".js";
    <div class="fileTable col-sm-6 col-md-3">
        <div class="thumbnail" style="width: 250px; margin-top: 20px;">
            <a href='@Url.Action("Index","CodeWrite", new { id = item.id })' class="fileImg">
                <img alt="file" src="~/img/file.png" style="width: 66px; height: 66px;" />
            </a>
            <div class="caption">
                <h3>@shorTitle</h3>
                <div class="editImg">
                    @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", null, new { id = item.id }, new { @class = "editIcon" }).ToHtmlString().Replace("[replacetext]", "<img alt=\"edit\" src=\"~/img/editsvg.png\" style=\"width: 66px; height 66px; \" />"))
                </div>
            </div>
        </div>
    </div>
}


